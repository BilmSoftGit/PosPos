
@{
    ViewData["Title"] = "UnAuthorizedAccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>401 Yetkisiz Erişim Denemesi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Yetkisiz Erişim Denemesi</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="error-page">
        <h2 class="headline text-danger">401</h2>

        <div class="error-content">
            <h3><em class="fas fa-exclamation-triangle text-danger"></em> Oops! Yetkiniz olmayan bir sayfaya erişmeye çalışıyorsunuz.</h3>

            <p>
                Bu bir hata değil, bir uyarıdır. Yetkiniz dahilinde olmayan bir sayfaya veya işleve erişmeye çalışıyorsunuz.
            </p>

            <form class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Arama">

                    <div class="input-group-append">
                        <button type="submit" name="submit" class="btn btn-danger">
                            <em class="fas fa-search"></em>
                        </button>
                    </div>
                </div>
                <!-- /.input-group -->
            </form>
        </div>
    </div>
    <!-- /.error-page -->

</section>
<!-- /.content -->